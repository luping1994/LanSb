<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eleitem_textmargin"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:id="@+id/addr"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/eleitem_textmargin"
                        android:gravity="center_vertical"
                        android:text="表号: 201407002403"
                        android:textColor="@color/black" />

                    <TextView
                        skin:enable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/eleitem_textmargin"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="更多"
                        android:textColor="@color/colorPrimary" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/eleitem_textmargin"
                        android:gravity="center_vertical"
                        android:text="设备名称：" />

                    <TextView
                        android:id="@+id/dev_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/eleitem_textmargin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:gravity="center_vertical"
                        android:text="xxx皮鞋专业户" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/eleitem_textmargin"
                        android:gravity="center_vertical"
                        android:text="所属区域：" />

                    <TextView
                        android:id="@+id/didname"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/eleitem_textmargin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:gravity="center_vertical"
                        android:text="xxx" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin">

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/eleitem_textmargin"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="账户余额：" />

                    <TextView
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/eleitem_textmargin"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="本月用电量：100 kwh" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin">

                    <TextView
                        android:id="@+id/dianya"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/eleitem_textmargin"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="电压：220 V" />

                    <TextView
                        android:id="@+id/dianliu"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/eleitem_textmargin"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="电流：100 A" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin">

                    <TextView
                        android:id="@+id/yougonggonglv"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/eleitem_textmargin"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="有功功率：220w" />

                    <TextView
                        android:id="@+id/gonglvyinsu"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/eleitem_textmargin"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="功率因素：1.0" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
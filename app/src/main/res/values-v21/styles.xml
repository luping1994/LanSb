<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">


    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <!-- 不显示Title Bar和Action Bar. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>


    <style name="AppTheme.NoActionBar.green" parent="AppTheme">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_green</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_green</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <!-- 不显示Title Bar和Action Bar. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark_green</item>
    </style>
</resources>
